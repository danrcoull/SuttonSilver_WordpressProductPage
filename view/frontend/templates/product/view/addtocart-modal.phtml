<script>// <![CDATA[
    require([
        'jquery',
        'domReady!'
    ], function ($) {



        $('.modal-child').on('show.bs.modal', function () {
            var modalParent = $(this).attr('data-modal-parent');
            $(modalParent).css('opacity', 0).hide();
        });

        $('.modal-child').on('hidden.bs.modal', function () {
            var modalParent = $(this).attr('data-modal-parent');
            $(modalParent).css('opacity', 1).show();
            if ($('body').hasClass('modal-open') == false) {
                $('body').addClass('modal-open');
            };
        });

        $("#addtocartmodal *[data-options-id]").each(function(){
            var optionsid = $(this).attr('data-options-id');
            $('.bundle-option-'+optionsid).find(':selected').each(function(){
                id =$(this).val();
                $("#addtocartmodal tr[data-option-id='"+id+"']").addClass('selected');
            });

        });


        $('.induction .yes-no-wrapper a').on('click',function(event){
            event.preventDefault();

            if($(this).hasClass('active') == false)
            {
                $('.induction .yes-no-wrapper a').removeClass('active');
                $(this).addClass('active');
                $parent = $(this).parent().attr('data-options-id');

                if($(this).text() == 'Yes')
                {

                    $('.bundle-option-'+$parent).prop('checked',false).click();

                    $('#datetimepicker12').datepicker('destroy');
                    $('#datetimepicker12').datepicker({
                        inline: true,
                        format: "dd MM yyyy",
                        beforeShowDay: $.datepicker.noWeekends,
                        onSelect: function(date) {
                            alert(date)
                        },
                    });


                }else{
                    $('.bundle-option-'+$parent).prop('checked',true).click();
                    $('#datetimepicker12').datepicker('destroy');
                }
            }

        });

        var agreed = false;
        var acceptTerms = function(agreed){
            if(agreed)
            {
                $('#addtocartmodal .terms-agreed, #termsModal .terms-agreed').css('opacity',0);
                $('.add-to-cart.arrow').css('opacity',1);
            }else{
                $('#addtocartmodal .terms-agreed, #termsModal .terms-agreed').css('opacity',1);
                $('.add-to-cart.arrow').css('opacity',0);
            }
        };

        acceptTerms(agreed);
        $(document).on('click','#termsModal .agree',function(event){
            event.preventDefault();
            agreed = true;
            acceptTerms(agreed);
            $('#termsModal').bsmodal('hide');
        });

        $(document).on('click','#addtocartmodal .add-to-cart.arrow', function(event){
             event.preventDefault();
             $('#addtocartmodal .box-tocart .tocart').trigger('click');
        });


        $('#product_addtocart_form').on('submit', function(event)
        {
            if(agreed == false) {
                $('#termsModalAdd').modal('show');
                event.preventDefault();
            }
        });

        $('#termsModalAdd .agree').on('click',function(event){
            agreed = true;
            event.preventDefault();
            $('#product_addtocart_form').submit();
            event.preventDefault();
        });

    });
    // ]]>
</script>